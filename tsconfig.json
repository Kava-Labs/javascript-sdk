{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",

    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types/", "./src/@types"]
  },
  "include": ["src"]
}
